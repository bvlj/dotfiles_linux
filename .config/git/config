[alias]
    id = "! git-identity"
    identity = "! git-identity"
    root = "! cd \"./$(git rev-parse --show-cdup)\""
    skip = "! git-skip"
    unskip = "! git-unskip"

[color]
    ui = auto

[core]
    ignorecase = true

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[user]
    useConfigOnly = true

